{
    "categories": [
        {
            "title": "## 🚀 Features",
            "labels": ["feature","enhancement 🤪🦄"]
        },
        {
            "title": "## 🐛 Fixes",
            "labels": ["fix","bug 🕵️‍♂️"]
        },
        {
            "title": "## 🧪 Tests",
            "labels": ["test","test 🧪🤞"]
        },
        {
            "title": "## 📚 Docs",
            "labels": ["📚 Docs"]
        },
        {
            "title": "## 📚 UI",
            "labels": ["ui 👀"]
        }
    ],
    "ignore_labels": ["ignore", "skip-changelog"],
    "label_extractor": [
        {
            "pattern": "(\\w+) (.+)",
            "target": "$1",
            "on_property": "title"
        }
    ],
    "sort": "ASC",
    "template": "${{CHANGELOG}}",
    "pr_template": "- ${{TITLE}} #${{NUMBER}}",
    "empty_template": "- no changes",
    "max_pull_requests": 1000,
    "max_back_track_time_days": 1000
}